---
const { id, name } = Astro.props;
---
<input {...Astro.props} type="radio" name={name} id={id} class="peer hidden" />
<label
    class="text-lg border-slate-400 border-2 px-5 py-2 rounded-lg font-semibold hover:border-indigo-500 hover:text-indigo-300 peer-checked:border-indigo-500 peer-checked:text-white peer-checked:bg-indigo-500"
    for={id}
>
    <slot />
</label>
